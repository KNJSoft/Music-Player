<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/backgroud"
    tools:context=".Lecteur">
    <TextView
        android:id="@+id/titrelecteur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="titre"
        android:layout_marginTop="20dp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/auteurlecteur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="auteur"
        android:textSize="18sp"
        android:textAllCaps="true"
        android:textColor="@color/white"/>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/music"
        android:background="@drawable/background_lecteur"
        app:tint="#fff"
        android:padding="24dp"
        />
    <SeekBar
        android:id="@+id/temps"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:thumbTint="#fff"
        android:progressTint="#fff"
        android:backgroundTint="#777777"/>
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="290dp"
        >
    <TextView
        android:id="@+id/dureecoule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textColor="@color/white"/>


    <TextView
        android:id="@+id/duree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="05:00"
        android:layout_alignParentEnd="true"
        android:textColor="@color/white"/>


    </RelativeLayout>

    <Button
        android:id="@+id/play"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/play"
        app:backgroundTint="#fff" />
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="20dp"
            android:src="@drawable/volume_down"
            android:layout_height="20dp"
            app:tint="#fff"
            />

        <SeekBar
            android:id="@+id/volume"
            android:layout_width="257dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#777777"
            android:progressTint="#fff"
            android:thumbTint="#fff" />

        <ImageView
            android:layout_width="20dp"
            android:src="@drawable/volume_up"
            android:layout_height="20dp"
            app:tint="#fff"
            />
    </LinearLayout>

</LinearLayout>